{% extends "master_layout.html" %}

{% block title %}{% endblock %}

{% block head %}
    {{ parent() }}
        <!-- DataTables CSS -->
        <link rel="stylesheet"
              href=
              "https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">

        <!-- DataTables JS -->
        <script src=
                "https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js">
        </script>

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.active {
            background-color: darkblue;
            color: white;
        }
        #create:link, #create:visited {
            background-color: green;
            color: white;
            padding: 14px 25px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        #create:hover, #create:active {
            background-color: green;
        }
    </style>
    <div class="" style="margin-left: 5%;margin-right: 5%;">
        <div class="topnav">
            <a class="active" href="../users/user-dashboard.php">Home</a>
            <a class="3" href="../users/user-index.php">Users</a>
            <a href="../category/category-index.php">Category</a>
            <a href="../products/product-index.php">Products</a>
            <a href="../users/user-logout.php" style="padding-left: 70%;">   Logout</a>
        </div>
    </div>

{% endblock %}

{% block tableset %}
    {%  if(is_error==1) %}
        <p style="color: green">{{ message }}</p>
    {%  endif %}

    <a href="product-add.php" id="create" target="_blank">AddProducts</a>
    <br><br><br>
       <table id="tableID" class="display nowrap">
        <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Location</th>
            <th>CompanyName</th>
            <th>State</th>
            <th>city</th>
            <th>address</th>
            <th>status</th>
            <th>Description</th>
            <th>Action</th>

        </tr>
        </thead>
        <tbody>
        {% for key, user in row %}

                     <tr>
                        <td>{{ user.title }}</td>
                         <td>{{ user.category_id }}</td>
                        <td>{{ user.location }}</td>
                         <td>{{ user.company_name }}</td>
                        <td>{{ user.state }}</td>
                        <td>{{ user.city }}</td>
                        <td>{{ user.address }}</td>
                         <td>{{ user.status }}</td>
                         <td>{{ user.description }}</td>
                        <td><a href="product-edit.php?id=1">Edit</a> |<a href="product-view.php?id=1">View</a> |<a href="product-delete.php?id=1">Delete</a> </td>

                     </tr>
        {% endfor %}

        </tbody>
    </table>
    <script>

        // Initialize the DataTable
        $(document).ready(function () {
            $('#tableID').DataTable({

                // Set the 3rd column of the
                // DataTable to ascending order
                order: [[2, 'asc']]
            });
        });
    </script>

