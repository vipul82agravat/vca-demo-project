{% extends "master_layout.html" %}

{% block title %}{% endblock %}

{% block head %}
{{ parent() }}
    <script src="http://vca.demoproject.aum/public/js/products.js"></script>

    {%  if(user_role==1) %}
        {% set menuitem = 'users/menu.html.twig' %}
    {% else %}
        {% set menuitem = 'users/admin-menu.html.twig' %}
    {%  endif %}

    {% include menuitem %}
{% endblock %}

{% block tableset %}
<a href="product-index.php" id="create">Back</a>
    <br><br>
    {% if server_error|length >= 1 %}
        {% for error in server_error %}
            <p style="color: red">{{error}}</h5> </p>
        {% endfor %}
    {% endif %}
        <h5 id="title_messge" style="color: red; display:none">
        <h5 id="location_messge" style="color: red; display:none">
         <h5 id="state_messge" style="color: red; display:none">
          <h5 id="city_messge" style="color: red; display:none">
          <h5 id="address_messge" style="color: red; display:none">
          <h5 id="status_messge" style="color: red; display:none">
          <h5 id="category_messge" style="color: red; display:none">
          <h5 id="img_messge" style="color: red; display:none">


    </h5>
<form name="insert" action="../../Controller/Products/ProductsController.php" method="post"  onsubmit="return Validation()" enctype="multipart/form-data" id="myForm">
<table width="100%"  border="0">
    <tr>

        <th height="60" scope="row">Product Category :</th>
        <td><select name="product_category" id="product_category" class="form-control ">
                <option value="">Select Category</option>
                {% for value in categories %}
                    <option value="{{ value.id }}">{{ value.name }}</option>

                {% endfor %}
            </select> </td>
    </tr>
    <tr>
        <th width="26%" height="60" scope="row">Product Title :</th>
        <td width="74%"><input type="text" name="product_title" value="" id="title" class="form-control" /></td>
    </tr>
    <tr>
        <th width="26%" height="60" scope="row">Product Location :</th>
        <td width="74%"><input type="text" name="product_location" value="" id="location" class="form-control"   /></td>
    </tr>
    <tr>
        <th width="26%" height="60" scope="row">PostCode :</th>
        <td width="74%"><input type="text" name="postcode"  id="postcode" class="form-control"  /></td>
    </tr>
    <tr>
        <th height="60" scope="row">Countries :</th>
        <td><select name="countries" class="form-control" id="countries" onChange="getstate(this.value);">
                <option value="">Select Countries</option>
                {% for value in countries    %}
                    <option value="{{ value.id  }}">{{ value.name }}</option>

                {% endfor %}
            </select> </td>
    </tr>
    <tr>
        <th height="60" scope="row">State :</th>
        <td><select name="state" class="form-control " id="statelist" onChange="getcity(this.value);">
                <option value="">Select State</option>
                {% for value in states %}
                    <option value="{{ value.id  }}">{{ value.name }}</option>

                {% endfor %}
            </select> </td>
    </tr>
    <tr>
        <th height="60" scope="row"> City :</th>
        <td><select name="city"  id="city"  class="form-control ">
                <option value="">Select City</option>
                {% for value in cities %}
                    <option value="{{ value.id  }}">{{ value.name }}</option>

                {% endfor %}
            </select> </td>
    </tr>

       <tr>
        <th width="26%" height="60" scope="row">Product Company :</th>
        <td width="74%"><input type="text" name="product_compnay" id="product_compnay" class="form-control"  /></td>
    </tr>

    <tr>
        <th height="60" scope="row" >Product Address :</th>
        <td><textarea name= product_address  id="address" class="form-control" >
    </textarea></td>
    <tr>
        <th width="26%" height="60" scope="row">Product Image
        <td width="74%"><input type="file" name="product_img" id="product_img" value="" class="form-control" /></td>
    </tr>

    <tr>
        <th height="60" scope="row">Product Status :</th>
        <td><select name="product_status" id="status" class="form-control ">
            <option value="">Select</option>
            <option value="1" selected>Active</option>
            <option value="0" >InActive</option>
        </select> </td>
    </tr>
    <tr>
        <th height="60" scope="row" >Product Description :</th>
        <td><textarea onblur="checkLength(this)" name= product_description id="description" class="form-control" >
    </textarea></td>

    </tr><!--  <tr>
        <th height="60" scope="row">Hobbies :</th>
        <td><input type="checkbox" name="hobbies" value="Read" required /> Read  &nbsp;
        <input type="checkbox" name="hobbies" value="traveling" required /> Traveling</td>
      </tr>-->
    <tr>
        <th height="60" scope="row">&nbsp;</th>
        <td><input type="submit" value="Submit" name="submit" class="btn-primary" /></td>
    </tr>
</table>
</form>
<!-- card.// -->
{% endblock %}


{% block left_teaser %}
<h1>Index1</h1>
{% endblock %}

