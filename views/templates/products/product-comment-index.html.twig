    {% extends "master_layout.html" %}

{% block title %}{% endblock %}

{% block head %}
    {{ parent() }}
        <!-- DataTables CSS -->
        <link rel="stylesheet"
              href=
              "https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">

        <!-- DataTables JS -->
        <script src=
                "https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js">
        </script>

    {%  if(user_role==1) %}
        {% set menuitem = 'users/menu.html.twig' %}
    {% else %}
        {% set menuitem = 'users/admin-menu.html.twig' %}
    {%  endif %}

    {% include menuitem %}
{% endblock %}

{% block tableset %}
    {%  if(is_error==1) %}
        <p style="color: red">{{ message }}</p>
     {% else %}
         <p style="color: green">{{ message }}</p>
    {%  endif %}
    <div class="row">
        <div class="col-sm-6">
{#            <a href="product-add.php" id="create" target="_blank">AddProducts</a>#}
        </div>
        <div class="col-sm-6" style="margin-left: 70%;">
            <form name="" action="../../Controller/Products/ProductsController.php" method="post">
            StartDate: <input type="date" name="start_date" value={{ start_date }} minlength="6"  required />
            EndDate: <input type="date" name="end_date"  value={{ end_date }} = minlength="6"  required />
            <input type="hidden" name="type"  value="product_comment_date_filter" minlength="6" class="form-control" required />
            <input type="submit" value="Search" name="submit" class="btn-primary" />
            </form>
        </div>

    </div>
    <br>
       <table id="tableID" class="display nowrap">
        <thead>
        <tr>
            <th>ID</th>
            <th>ProductName</th>
            <th>comments</th>
          <th>Action</th>

        </tr>
        </thead>
        <tbody>
        {% for key, comment in row %}

                     <tr>
                         <td>{{ comment.number }}</td>
                         <td>{{ comment.product_name }}</td>
                         <td>{{ comment.comments }}</td>
                        <td><a href="product-comment-view.php?id={{comment.id}}">View</a> |<a onclick="return confirm('Are you Sure  Want to Delete This Record?')"  href="product-comment-delete.php?id={{comment.id}}">Delete</a> </td>

                     </tr>
        {% endfor %}

        </tbody>
    </table>
    <script>

        // Initialize the DataTable
        $(document).ready(function () {
            $('#tableID').DataTable({

                // Set the 3rd column of the
                // DataTable to ascending order
                order: [[2, 'asc']]
            });
        });
    </script>

    <!-- card.// -->
{% endblock %}


{% block left_teaser %}
    <h1>Index1</h1>
{% endblock %}

