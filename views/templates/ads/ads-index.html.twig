{% extends "master_layout.html" %}

{% block title %}{% endblock %}

{% block head %}
    {{ parent() }}
        <!-- DataTables CSS -->
        <link rel="stylesheet"
              href=
              "https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">

        <!-- DataTables JS -->
        <script src=
                "https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js">
        </script>
            <script>
                function ConfirmDelete()
                {
                    if (confirm("Delete Account?")){
                        return true;
                    }else{
                        return  false;
                    }
                }
            </script>
    {%  if(user_role==1) %}
        {% set menuitem = 'users/menu.html.twig' %}
    {% else %}
        {% set menuitem = 'users/admin-menu.html.twig' %}
    {%  endif %}

    {% include menuitem %}

{% endblock %}

{% block tableset %}
    {%  if(is_error==1) %}
        <p style="color: red">{{ message }}</p>
    {% else %}
        <p style="color: green">{{ message }}</p>
    {%  endif %}

    <div class="row">
        <div class="col-sm-6">
            <a href="ads-add.php" id="create" target="_blank">AddAds</a>
        </div>
        <div class="col-sm-6" style="margin-left: 70%;">
            <form name="" action="../../Controller/ads/AdsController.php" method="post">
                StartDate: <input type="date" name="start_date" value={{ start_date }} minlength="6"  required />
                EndDate: <input type="date" name="end_date" value={{ end_date }} = minlength="6"  required />
                <input type="hidden" name="type" value="ads_date_filter" minlength="6" class="form-control" required />
                <input type="submit" value="Search" name="submit" class="btn-primary" />
            </form>
        </div>
    </div>
    <br>
       <table id="tableID" class="display nowrap">
        <thead>
        <tr>
            <th>ID</th>
            <th>Prodduct Name</th>
            <th>Ads Position</th>
{#            <th>Ads Images</th>#}
            <th>Sort Number</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Action</th>

        </tr>
        </thead>
        <tbody>
        {% for key, ads in row %}

            <tr>
            <td>{{ ads.id }}</td>
            <td>{{ ads.product_name }}</td>
            <td>{{ ads.ads_position }}</td>
            <td>{{ ads.sort_number }}</td>
            <td>{{ ads.start_date }}</td>
            <td>{{ ads.end_date }}</td>
            <td>{{ ads.status }}</td>
            <td><a href="ads-edit.php?id={{ ads.id }}">Edit</a> |<a href="ads-view.php?id={{ ads.id }}">View</a> |<a onclick="return confirm('Are you Sure  Want to Delete This Record?')" href="ads-delete.php?id={{ ads.id }}">Delete</a> </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    <script>

        // Initialize the DataTable
        $(document).ready(function () {
            $('#tableID').DataTable({

                // Set the 3rd column of the
                // DataTable to ascending order
                order: [[2, 'asc']]
            });
        });
    </script>

    <!-- card.// -->
{% endblock %}


