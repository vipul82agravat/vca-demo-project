{% extends "master_layout.html" %}

{% block title %}{% endblock %}

{% block head %}
    {{ parent() }}

    <script src="http://vca.demoproject.aum/public/js/role.js"></script>
    {% set menuitem = 'users/menu.html.twig' %}
    {% include menuitem %}
{% endblock %}

{% block tableset %}
    <a href="ads-index.php" id="create" target="_blank">Back</a>
    <br>
    {% if server_error|length >= 1 %}
        {% for error in server_error %}
            <p style="color: red">{{error}}</h5> </p>
        {% endfor %}
    {% endif %}
    <h5 id="status_messge" style="color: red; display:none"></h5>
    <h5 id="name_messge" style="color: red; display:none"></h5>

        <table width="100%"  border="0">
            <tr>
                <input type="hidden" name="role_id" value="{{data.id}}" class="form-control" required  />
                <th height="60" scope="row">Select  Ads Product:</th>
                <td><select name="product_id" id="product_id" class="form-control " readonly="">
                        <option value="">Select Product</option>
                        {% for value in products %}
                            {% if(value.id == data.product_id) %}
                                <option value="{{ value.id }}" selected>{{ value.name }}</option>
                            {% else %}
                                <option value="{{ value.id }}">{{ value.name }}</option>
                            {% endif %}
                        {% endfor %}
                    </select> </td>
            </tr>
            <tr>
                <th height="60" scope="row">Ads Position :</th>
                <td><select name="ads_position"  id="ads_position" class="form-control " readonly>
                        <option value="" selected> Select Position</option>
                        {% for value in ads_position %}
                            {% if(value == data.ads_position) %}
                                <option value="{{ value }}"  selected>{{ value }}</option>
                            {% else %}
                                <option value="{{ value }}" >{{ value }}</option>
                            {% endif %}
                        {% endfor %}
                    </select> </td>
            </tr>
            <tr>
                <th height="60" scope="row">AdsSort Number :</th>
                <td><select name="ads_sort_number"  id="ads_sort_number" class="form-control " readonly>
                        <option value="" selected> Select Sort Number</option>
                        {% for value in ads_sort_number %}
                            {% if(value == data.sort_number) %}
                                <option value="{{ value }}" selected>{{ value }}</option>
                            {% else %}
                                <option value="{{ value }}" >{{ value }}</option>
                            {% endif %}
                        {% endfor %}
                    </select> </td>
            </tr>
            <tr>
                <th width="26%" height="60" scope="row">Product Image
                <td width="74%">
                    <img class="img-thumbnail" src="http://vca.demoproject.aum/public/images/products/{{ data.img_path }}" alt="user avatar"></td>
            </tr>
            <tr>
                <th width="26%" height="60" scope="row">Ads Start-Date:</th>
                <td width="74%"><input type="date" name="start_date" id="start_date" value="{{ start_date }}" readonly class="form-control"  /></td>
            </tr>
            <tr>
                <th width="26%" height="60" scope="row">Ads End-Date:</th>
                <td width="74%"><input type="date" name="end_date" id="end_date" value="{{ end_date }}" readonly class="form-control"  /></td>
            </tr>

            <tr>
                <th height="60" scope="row">Ads Status :</th>
                <td><select name="ads_status"  id="status" class="form-control " readonly>
                        {% if(data.status==1) %}
                            <option value="0">InActive</option>
                            <option value="1" selected>Active</option>
                        {% else %}
                            <option value="0" selected>InActive</option>
                            <option value="1">Active</option>
                        {% endif %}
                    </select> </td>
            </tr>
            <tr>
                <th height="60" scope="row" >Ads Description :</th>
                <td><textarea name="ads_description" class="form-control" readonly  >{{ data.description }}
        </textarea></td>
            </tr><!--  <tr>
        <th height="60" scope="row">Hobbies :</th>
        <td><input type="checkbox" name="hobbies" value="Read" required /> Read  &nbsp;
        <input type="checkbox" name="hobbies" value="traveling" required /> Traveling</td>
      </tr>-->
            <tr>
                <th height="60" scope="row">&nbsp;</th>
{#                <td><input type="submit" value="Submit" name="submit" class="btn-primary" /></td>#}
            </tr>
        </table>

    <!-- card.// -->
{% endblock %}


{% block left_teaser %}
    <h1>Index1</h1>
{% endblock %}

