    <link href="css/styles.css" rel="stylesheet">

    <script>
        function Validation(){

            stat=1;
            var name=$('#name').val();
            var status=$('#status').val();

            $('#name_messge').hide();
            $('#status_messge').hide();

            $('#name').css('border-color', 'green');
            $('#status').css('border-color', 'green');;


            if(name==""){
                $('#name').css('border-color', 'red');
                $("#name_messge").html("***Name is missing");
                $('#name_messge').show();
                stat=0;

            }

            if(status==""){
                $('#status').css('border-color', 'red');
                $("#status_messge").html("***Status is missing");
                $('#status_messge').show();
                stat=0;

            }

            if(stat==0){
                console.log('aaa'+stat);
                return false;
            }

        }
    </script>
        {% set menuitem = 'users/menu.html.twig' %}
        {% include menuitem %}
    {% endblock %}
{% block tableset %}
    <a href="role-index.php" id="create" target="_blank">Back</a>
    <h5 id="status_messge" style="color: red; display:none"></h5>
    <h5 id="name_messge" style="color: red; display:none"></h5>
<form name="insert" action="../../Controller/role/RoleController.php" method="post" onsubmit="return Validation()" enctype="multipart/form-data" id="myForm">
<table width="100%"  border="0">
    <tr>
        <th width="26%" height="60" scope="row">Role Name :</th>
        <input type="hidden" name="role_id" value="{{id}}" class="form-control" required  />
        <td width="74%"><input type="text" name="role_name"   id="name"  value="{{name}}" class="form-control"   /></td>
    </tr>
    <tr>
        <th width="26%" height="60" scope="row">Status Code:</th>
        <td width="74%"><input type="number" name="status_code" id="status_code" value="{{ status_code }}" class="form-control"  /></td>
    </tr>
 <tr>
        <th height="60" scope="row">Role Status :</th>
        <td><select name="role_status"  id="status" class="form-control ">
            <option value="">Select</option>
            {% if(status==1) %}
                <option value="1" selected>Active</option>
                <option value="0">InActive</option>

            {% else %}
                <option value="1">Active</option>
                <option value="0" selected>InActive</option>

            {% endif %}
        </select> </td>
    </tr>
    <tr>
        <th height="60" scope="row" >Role Description :</th>
        <td><textarea name= "role_description" class="form-control" >{{description}}
</textarea></td>
    </tr><!--  <tr>
        <th height="60" scope="row">Hobbies :</th>
        <td><input type="checkbox" name="hobbies" value="Read" required /> Read  &nbsp;
        <input type="checkbox" name="hobbies" value="traveling" required /> Traveling</td>
      </tr>-->
    <tr>
        <th height="60" scope="row">&nbsp;</th>
        <td><input type="submit" value="Update" name="submit" class="btn-primary" /></td>
    </tr>
</table>
</form>
