{% extends "master_layout.html" %}

{% block title %}{% endblock %}

{% block head %}
    {{ parent() }}
        <!-- DataTables CSS -->
        <link rel="stylesheet"
              href=
              "https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">

        <!-- DataTables JS -->
        <script src=
                "https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js">
        </script>

    {% set menuitem = 'users/menu.html.twig' %}
    {% include menuitem %}


{% endblock %}

{% block tableset %}
    {%  if(is_error==1) %}
        <p style="color: green">{{ message }}</p>
    {%  endif %}

    <a href="role-add.php" id="create" target="_blank">AddRole</a>
    <br><br><br>
       <table id="tableID" class="display nowrap">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Status</th>
            <th>Description</th>
            <th>Action</th>

        </tr>
        </thead>
        <tbody>
        {% for key, user in row %}

             <tr>
              <td>{{ user.id }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.status }}</td>
            <td>{{ user.description }}</td>
            <td><a href="role-edit.php?id={{ user.id }}">Edit</a> |<a href="role-view.php?id={{ user.id }}">View</a> |<a href="role-delete.php?id={{ user.id }}">Delete</a> </td>

        </tr>
        {% endfor %}

        </tbody>
    </table>
    <script>

        // Initialize the DataTable
        $(document).ready(function () {
            $('#tableID').DataTable({

                // Set the 3rd column of the
                // DataTable to ascending order
                order: [[2, 'asc']]
            });
        });
    </script>

    <!-- card.// -->
{% endblock %}


{% block left_teaser %}
    <h1>Index1</h1>
{% endblock %}

