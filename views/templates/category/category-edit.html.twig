{% extends "master_layout.html" %}

{% block title %}{% endblock %}

{% block head %}
{{ parent() }}
    <script src="http://vca.demoproject.aum/public/js/category.js"></script>

    {%  if(user_role==1) %}
        {% set menuitem = 'users/menu.html.twig' %}
    {% else %}
        {% set menuitem = 'users/admin-menu.html.twig' %}
    {%  endif %}

    {% include menuitem %}
{% endblock %}

{% block tableset %}
    <a href="category-index.php" id="create">Back</a>
    <br>
    {% if server_error|length >= 1 %}
        {% for error in server_error %}
            <p style="color: red">{{error}}</h5> </p>
        {% endfor %}
    {% endif %}
    <h5 id="status_messge" style="color: red; display:none"></h5>
    <h5 id="name_messge" style="color: red; display:none"></h5>
<form name="insert" action="../../Controller/Category/CategoryController.php" method="post" onsubmit="return Validation()" enctype="multipart/form-data" id="myForm">
<table width="100%"  border="0">
    <tr>
        <th width="26%" height="60" scope="row">Category Name :</th>
        <input type="hidden" name="category_id" value="{{id}}" class="form-control" required  />
        <td width="74%"><input type="text" name="category_name"   id="name"  value="{{name}}" class="form-control"   /></td>
    </tr>
    <tr>
        <th height="60" scope="row">Category Status :</th>
        <td><select name="category_status"  id="status" class="form-control ">
            <option value="">Select</option>
            {% if(status==1) %}
                <option value="1" selected>Active</option>
                <option value="0">InActive</option>

            {% else %}
                <option value="1">Active</option>
                <option value="0" selected>InActive</option>

            {% endif %}
        </select> </td>
    </tr>
    <tr>
        <th height="60" scope="row" >Category Description :</th>
        <td><textarea name= category_description class="form-control" >{{description}}
</textarea></td>
    </tr><!--  <tr>
        <th height="60" scope="row">Hobbies :</th>
        <td><input type="checkbox" name="hobbies" value="Read" required /> Read  &nbsp;
        <input type="checkbox" name="hobbies" value="traveling" required /> Traveling</td>
      </tr>-->
    <tr>
        <th height="60" scope="row">&nbsp;</th>
        <td><input type="submit" value="Update" name="submit" class="btn-primary" /></td>
    </tr>
</table>
</form>
<!-- card.// -->
{% endblock %}


{% block left_teaser %}
<h1>Index1</h1>
{% endblock %}

{% block footer %}
{% endblock %}
